[Unit]
Description=WiFi Access Point Manager
Wants=network-online.target
After=network-online.target NetworkManager.service
Requires=NetworkManager.service

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/etc/environment
ExecStart=/usr/local/bin/start-access-point
ExecStop=/bin/bash -c 'nmcli connection down access-point; sleep 3; nmcli device disconnect $INTERFACE || true'
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
