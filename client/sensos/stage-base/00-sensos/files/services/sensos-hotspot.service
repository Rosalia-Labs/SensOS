[Unit]
Description=WiFi Access Point Manager
Wants=network-online.target
After=network-online.target NetworkManager.service
Requires=NetworkManager.service ensure-sensos-dir.service
Requires=ensure-sensos-dir.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/start-hotspot.sh
ExecStop=/bin/bash -c 'sudo nmcli connection down Hotspot || true'
User=sensos-runner
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
