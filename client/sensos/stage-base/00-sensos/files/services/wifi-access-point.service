[Unit]
Description=WiFi Access Point Manager
Wants=network-online.target
After=network-online.target NetworkManager.service
Requires=NetworkManager.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/start-wifi-access-point.sh
ExecStop=/bin/bash -c 'sudo nmcli connection down accesspoint || true'
StandardError=journal
StandardOutput=journal
StandardInput=null
User=sensos-runner
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
