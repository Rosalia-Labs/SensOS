[Unit]
Description=Read I2C sensors and store readings
After=multi-user.target ensure-sensos-dir.service
Requires=ensure-sensos-dir.service

[Service]
Type=simple
User=sensos-runner
ExecStart=/sensos/python/venv/bin/python /usr/local/bin/read-i2c-sensors.py
WorkingDirectory=/sensos/data
StandardOutput=journal
StandardError=journal
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
