[Unit]
Description=Read I2C sensors and store readings
After=multi-user.target create-python-venv.service
Requires=create-python-venv.service

[Service]
Type=oneshot
User=sensos-admin
Group=sensos-data
ExecStart=/sensos/python/venv/bin/python /usr/local/bin/read-i2c-sensors.py
WorkingDirectory=/sensos/data
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
